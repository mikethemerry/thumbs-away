{
  "manifest_version": 3,
  "name": "Thumbs Away",
  "version": "1.1.0",
  "description": "Hide thumbs up/down feedback buttons on Claude, ChatGPT, and Gemini to keep your business data out of AI training",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png"
  }
}
